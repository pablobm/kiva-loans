<html>
<head>
<title>Loans by user <%=h @user_id %></title>
<meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
<script type="text/javascript">
  var markers_options = [];
  var map;
  function initialize() {
    var latlng = new google.maps.LatLng(0, 0);
    var myOptions = {
      zoom: 2,
      center: latlng,
      mapTypeId: google.maps.MapTypeId.ROADMAP
    };
    map = new google.maps.Map(document.getElementById("map_canvas"), myOptions);
    for (i in markers_options) {
      var mo = markers_options[i];
      mo.map = map;
      new google.maps.Marker(mo);
    }
  }
</script>
</head>
<body onload="initialize()">
  <h1>Loans by <%= @user_id %></h1>
  <div id="map_canvas" style="width:100%; height:100%"></div>

<% @loans.each do |loan| %>
  <h2><a href="http://www.kiva.org/app.php?page=businesses&action=about&id=<%= loan['id'] %>"><%= loan['name'] %></a><h2>
  <table>
    <tr><th>From</th><td><%= loan['location']['town'] %>, <%= loan['location']['country'] %></td></tr>
    <tr><th>Trade</th><td><%= loan['sector'] %>/<%= loan['activity'] %></td></tr>
    <tr><th>Loan amount</th><td>$<%= loan['loan_amount'] %></td></tr>
  </table>
  <script type="text/javascript">
var mo = {
  position: new google.maps.LatLng("<%= loan['location']['geo']['pairs'].split.join('", "') %>"),
  title: '<%= loan['name'].gsub("'", "\\'") %>'
};
markers_options.push(mo);
  </script>
<% end %>
</body>
</html>
